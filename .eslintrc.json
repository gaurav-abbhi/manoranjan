{
  "extends": ["airbnb", "prettier"],
  "plugins": ["react", "jsx-a11y", "import", "prettier"],
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/jsx-pascal-case": [1, { "allowAllCaps": true, "ignore": [true] }],
    "import/no-extraneous-dependencies": 0,
    "react/forbid-prop-types": 0,
    "react/prop-types": 0,
    "jsx-a11y/label-has-for": 2,
    "no-console": 1,
    "prettier/prettier": 0
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  }
}
